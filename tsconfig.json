{
  "compilerOptions": {
    "target": "es5", /* target of the compilation (es5) */
    "module": "commonjs", /* System.register([dependencies], function) (in JS)*/
    "moduleResolution": "node", /* how module gets resolved (needed for Angular 2)*/
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false, /* any has to be written explicity*/
    "noEmitHelpers": true,
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "hammerjs",
      "jasmine",
      "node",
      "selenium-webdriver",
      "source-map",
      "uglify-js",
      "webpack"
    ]
  },
  "files": [
    "src/**/*.ts"
  ],
  "exclude": [
    ".",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
